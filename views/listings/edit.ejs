<%- layout('/layout/boilerplate.ejs') %>


  <body>
    <div class="row">
      <div class="col-7 offset-3">
    <h2 style="text-align: center;">Edit Listing</h2><br>
    <form action="/listings/<%=listingone._id%>?_method=PUT" method="POST" class="needs-validation" novalidate enctype="multipart/form-data">
    <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Title</label>
        <input name="listings[title]" type="text" class="form-control" id="exampleFormControlInput1" value="<%=listingone.title%>" required>
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label for="exampleFormControlTextarea1" class="form-label">Description</label>
        <textarea name="listings[description]" class="form-control" id="exampleFormControlTextarea1" rows="3" value="<%=listingone.description%>" required><%=listingone.description%></textarea>
        <div class="invalid-feedback">Please Enter a Short Description</div>
      </div>
      <label class="form-label">Original Image Preview</label>
      <div class="mb-3">
        
          <img src="<%=Original%>" alt="404 Error" >
        </div>
      <div class="mb-3">
        <label for="exampleFormControlInput11" class="form-label">Upload New Image </label>
        <input name="listings[image]" type="file" class="form-control" id="exampleFormControlInput11" placeholder="Image ">
      </div>
      <div class="row">
      <div class="mb-3 col-md-4">
        <label for="exampleFormControlInput1" class="form-label">Price</label>
        <input name="listings[price]" type="text" class="form-control" id="exampleFormControlInput1" value="<%=listingone.price%>" required>
        <div class="invalid-feedback">Please Enter Price</div>
      </div>
      <div class="mb-3 col-md-8">
        <label for="exampleFormControlInput1" class="form-label">Location</label>
        <input name="listings[location]" type="text" class="form-control" id="exampleFormControlInput1" value="<%=listingone.location%>" required>
        <div class="invalid-feedback">Please Enter Location</div>
      </div>
      </div>
      <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Country</label>
        <input name="listings[country]" type="text" class="form-control" id="exampleFormControlInput1" value="<%=listingone.country%>" required>
        <div class="invalid-feedback">Please Enter Country</div>
      </div>
      <button type="submit" class="btn btn-success add-new-btn">Update</button>
    </form>
    <br><br>
    </div></div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
