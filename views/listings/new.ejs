<%- layout('/layout/boilerplate.ejs') %>

<body class="listing-theme">
  <div class="container min-vh-75 d-flex align-items-center justify-content-center py-4">
    <div class="card shadow-lg p-4 w-100 rounded-4 listing-card" style="max-width: 700px;">
      <h2 class="text-center text-deep-teal mb-4">Create New Listing</h2>

      <form action="/listings/new" method="POST" class="needs-validation" novalidate enctype="multipart/form-data">
        <div class="mb-3">
          <label for="exampleFormControlInput1" class="form-label">Title</label>
          <input name="listings[title]" type="text" class="form-control" id="exampleFormControlInput1" placeholder="Enter Title" required>
          <div class="valid-feedback">Looks good!</div>
        </div>

        <div class="mb-3">
          <label for="exampleFormControlTextarea1" class="form-label">Description</label>
          <textarea name="listings[description]" class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Enter Description" required></textarea>
          <div class="invalid-feedback">Please Enter a Short Description</div>
        </div>

        <div class="mb-3">
          <label for="exampleFormControlInput11" class="form-label">Upload Image</label>
          <input name="listings[image]" type="file" class="form-control" id="exampleFormControlInput11" required>
        </div>

        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="exampleFormControlInput111" class="form-label">Price</label>
            <input name="listings[price]" type="text" class="form-control" id="exampleFormControlInput111" placeholder="Enter Price" required>
            <div class="invalid-feedback">Please Enter Price</div>
          </div>
          <div class="mb-3 col-md-8">
            <label for="exampleFormControlInput1111" class="form-label">Location</label>
            <input name="listings[location]" type="text" class="form-control" id="exampleFormControlInput1111" placeholder="Enter Location" required>
            <div class="invalid-feedback">Please Enter Location</div>
          </div>
        </div>

        <div class="mb-3">
          <label for="exampleFormControlInput11111" class="form-label">Country</label>
          <input name="listings[country]" type="text" class="form-control" id="exampleFormControlInput11111" placeholder="Enter Country" required>
          <div class="invalid-feedback">Please Enter Country</div>
        </div>
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-success w-25">Add</button>
        </div>
      </form>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
