<%- layout('/layout/boilerplate.ejs') %>

<body>
  <div class="container d-flex justify-content-center align-items-center login-cont">
    <div class="card shadow p-4 rounded-4 login-card w-100" style="max-width: 450px;">
      <h2 class="text-center mb-4 text-deep-teal">Login</h2>

      <form action="/login" method="POST" class="needs-validation" novalidate>
        <div class="mb-3">
          <label for="username" class="form-label">Username</label>
          <input name="username" type="text" class="form-control" id="username" placeholder="Enter Username" required>
          <div class="valid-feedback">Looks good!</div>
        </div>

        <div class="mb-3">
          <label for="myInput" class="form-label">Password</label>
          <input name="password" type="password" class="form-control" id="myInput" placeholder="Enter Password" required>
          <div class="form-check mt-2">
            <input type="checkbox" class="form-check-input" id="showPass" onclick="myFunction()">
            <label class="form-check-label" for="showPass">Show Password</label>
          </div>
          <div class="valid-feedback">Looks good!</div>
        </div>

        <button type="submit" class="btn btn-success w-100 btn-teal">Login</button>
      </form>
    </div>
  </div>
</body>

<script>
function myFunction() {
  const x = document.getElementById("myInput");
  x.type = x.type === "password" ? "text" : "password";
}
</script>
